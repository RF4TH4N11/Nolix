<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Movie - Nolix21</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-white min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-gray-800 p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold text-red-500"><a href="/">NOLIX21</a></h1>
            <nav>
                <a href="/dashboard" class="text-white hover:text-red-400 mr-4">Dashboard</a>
                <a href="/logout" class="text-white hover:text-red-400">Logout</a>
            </nav>
        </div>
    </header>

    <!-- Main Form -->
    <main class="flex-grow flex justify-center items-center p-4">
    <div class="bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-md">
      <h2 class="text-2xl font-bold mb-6 text-center">Edit Movie</h2>
      <form action="/admin/edit-movie/<%= movie.id %>" method="POST" class="space-y-4">
        <input type="text" name="title" placeholder="Movie Title" value="<%= movie.title %>"
          class="w-full p-2 rounded bg-gray-700 border border-gray-600">
        <input type="text" name="year" placeholder="Year" value="<%= movie.year %>"
          class="w-full p-2 rounded bg-gray-700 border border-gray-600">
        <input type="text" name="released" placeholder="Release Date" value="<%= movie.released %>"
          class="w-full p-2 rounded bg-gray-700 border border-gray-600">
        <input type="text" name="runtime" placeholder="Runtime" value="<%= movie.runtime %>"
          class="w-full p-2 rounded bg-gray-700 border border-gray-600">
        <input type="text" name="director" placeholder="Director" value="<%= movie.director %>"
          class="w-full p-2 rounded bg-gray-700 border border-gray-600">
        <input type="text" name="actor" placeholder="Actor" value="<%= movie.actor %>"
          class="w-full p-2 rounded bg-gray-700 border border-gray-600">
        <input type="text" name="plot" placeholder="Synopsis" value="<%= movie.plot %>"
          class="w-full p-2 rounded bg-gray-700 border border-gray-600">
        <input type="text" name="imageUrl" placeholder="Image URL" value="<%= movie.imageUrl %>"
          class="w-full p-2 rounded bg-gray-700 border border-gray-600">
        <input type="number" name="rating" placeholder="Rating" value="<%= movie.rating %>"
          class="w-full p-2 rounded bg-gray-700 border border-gray-600">
        <input type="text" name="videoId" placeholder="Video ID" value="<%= movie.videoId %>"
          class="w-full p-2 rounded bg-gray-700 border border-gray-600">
        <input type="date" name="createdAt" placeholder="Created At" value="<%= movie.createdAt.toISOString().slice(0,10) %>"
          class="w-full p-2 rounded bg-gray-700 border border-gray-600">
        <input type="text" name="genre" placeholder="Genre" value="<%= movie.genre %>"
          class="w-full p-2 rounded bg-gray-700 border border-gray-600">

        <button type="submit" class="w-full bg-yellow-600 hover:bg-yellow-700 py-2 rounded font-semibold">
          Update Movie
        </button>
      </form>
    </div>
  </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white text-center py-4">
        <p class="text-sm">&copy; 2025 Nolix21. All rights reserved.</p>
    </footer>
</body>

</html>