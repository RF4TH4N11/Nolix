    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NOLIX21</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" href="https://www.svgrepo.com/show/343982/movie.svg">
